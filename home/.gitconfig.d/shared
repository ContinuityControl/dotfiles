[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff --color
  lg = log -p
  lp = log --oneline --graph --color
  dfw = diff --word-diff=color
  nudge = push --force-with-lease
  delete-merged = branch -d $(git branch --merged | grep -v $(git config gitflow.branch.develop))
[color]
  status = true
  diff = true
  ui = true
[core]
  pager = "less -F -X"
  editor = /usr/bin/vim
  preloadindex = true
  excludesfile = ~/.gitconfig.d/gitignore
[merge]
  tool = /usr/bin/vimdiff
[push]
  default = simple
